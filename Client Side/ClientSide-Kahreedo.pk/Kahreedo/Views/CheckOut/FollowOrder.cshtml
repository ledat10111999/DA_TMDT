
@{
    ViewBag.Title = "FollowOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @using (Ajax.BeginForm("OrderSearchResult", "CheckOut", new AjaxOptions { UpdateTargetId = "KQTimKiemUpdateTarget", InsertionMode = InsertionMode.Replace }, new { @class = "w-100" }))
        {
        <div class="col-md-12">
            <div class="form-group ">
                <input type="text" class="form-control "  style="width:75%;display:inline-block;margin-top:10px" placeholder="Nhập mã đơn đặt hàng" name="id" aria-label="mã đơn đặt hàng" aria-describedby="basic-addon2">
                <div class="input-group-append " style="display:inline" >
                    <button class="btn btn-primary" type="submit">Tra cứu</button>
                </div>
            </div>
        </div>
         
            <div class="col-md-12" id="KQTimKiemUpdateTarget"></div>
        }

    </div>
 
</div>

